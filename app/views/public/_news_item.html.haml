.news_item
  .postdate
    .month{:class => "m-#{news_item.created_at.strftime('%m')}"}= news_item.created_at.strftime('%B')
    .day{:class => "d-#{news_item.created_at.strftime('%d')}"}= news_item.created_at.strftime('%d')
    .year{:class => "y-#{news_item.created_at.strftime('%Y')}"}= news_item.created_at.strftime('%Y')

  %h2=h news_item.title
  = RedCloth.new(news_item.content).to_html(:refs_site_reference)

