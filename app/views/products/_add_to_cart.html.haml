.add_to_cart
  - form_tag url_for(:controller => 'products', :action => 'add_to_cart') do
    %p#price= 'Price: ' + number_to_currency(@product.price,:unit => "&pound;")
    = label_tag 'option_id', 'Size/Colour:'
    = select_tag('option_id',options_from_collection_for_select(@product.options,:id,:name))
    = label_tag 'quantity', 'Quantity:'
    = text_field_tag 'quantity', '1'
    = submit_tag "Add to cart"
  - if number_in_cart > 0
    %p#number_in_cart= "You currently have #{number_in_cart} of this product in your cart"

